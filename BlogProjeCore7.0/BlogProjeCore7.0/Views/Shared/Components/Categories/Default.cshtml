@model IEnumerable<Category>
<div class="card mb-4">
    <div class="card-header">Kategoriler</div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <ul class="list-unstyled mb-0">
                    @foreach(var item in Model)
                    {
                        <li><a href="/Categories/Index/@item.Id">@item.Name</a></li>
                    }

                </ul>
            </div>
           
        </div>
    </div>
</div>